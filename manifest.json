{
  "manifest_version": 3,
  "name": "CommentWizard",
  "description": "Generates suggestions using ChatGPT for LinkedIn comments.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "store_icon.png"
  },
  "icons": {
    "16": "store_icon.png",
    "48": "store_icon.png",
    "128": "store_icon.png"
  }
}
